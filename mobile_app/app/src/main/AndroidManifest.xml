<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asp.smartbeergreenhouse">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartBeerGreenHouse">
        <activity
            android:name=".activities.AlarmsActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/Theme.SmartBeerGreenHouseWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".activities.FarmerActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".activities.BreweryActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
    </application>

</manifest>